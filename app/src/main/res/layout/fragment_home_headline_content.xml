<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.androidgroup.HomeHeadlineFragment.HomeHeadlineContent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_below="@+id/ll_first"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="21dp"
                        android:layout_toRightOf="@+id/ll_first"
                        android:background="@drawable/photo1" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="38dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="余韵"
                            android:textSize="18sp"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/tv_introduce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="2小时前·抖音流行歌手"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="北京山顶洞人：你好，范冰冰"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_gravity="center" />
                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/wenzhang_first"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/alc"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:text="123"
                        android:layout_marginLeft="8dp"
                        android:textSize="18sp"/>
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/all"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:text="123"
                        android:layout_marginLeft="8dp"
                        android:textSize="18sp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/alg"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center"
                        android:text="123"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_line"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:orientation="horizontal"
                    android:background="@color/gray1">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_below="@+id/ll_first"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="21dp"
                        android:layout_toRightOf="@+id/ll_first"
                        android:background="@drawable/photo1" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="38dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="余韵"
                            android:textSize="18sp"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="2小时前·抖音流行歌手"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="210dp"
                        android:text="国庆去哪玩？网友：去哪都人多，不如宅在家里吃盒马"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center" />
                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/wenzhang_two"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/alc"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:text="103"
                        android:layout_marginLeft="8dp"
                        android:textSize="18sp"/>
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/all"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:text="113"
                        android:layout_marginLeft="8dp"
                        android:textSize="18sp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/alg"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center"
                        android:text="123"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:orientation="horizontal"
                    android:background="@color/gray1">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_below="@+id/ll_first"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="21dp"
                        android:layout_toRightOf="@+id/ll_first"
                        android:background="@drawable/photo1" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="38dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="余韵"
                            android:textSize="18sp"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="2小时前·抖音流行歌手"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="210dp"
                        android:text="因为一个大西瓜，砍死两个老人家"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center" />
                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/wenzhang_three"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/alc"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:text="99"
                        android:layout_marginLeft="8dp"
                        android:textSize="18sp"/>
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/all"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:text="89"
                        android:layout_marginLeft="8dp"
                        android:textSize="18sp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/alg"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center"
                        android:text="100"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:orientation="horizontal"
                    android:background="@color/gray1"
                    android:layout_marginTop="20dp">
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="暂无更多内容"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@color/gray1"
                    android:textColor="#000000"/>
            </LinearLayout>

        </RelativeLayout>


    </ScrollView>

</FrameLayout>


