<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_btop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/b"
            android:layout_gravity="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="余韵"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="103dp"/>
        <TextView
            android:id="@+id/tv_more"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="···"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:layout_marginLeft="103dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_firstLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ll_btop"
        android:orientation="vertical"
        android:background="#dcdbdb">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_firstLine"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <ImageView
                android:id="@+id/iv_photo"
                android:background="@drawable/photo1"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ll_publish"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="544"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="30dp"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发布"
                            android:paddingLeft="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="30dp"
                            android:textSize="10sp"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_concern"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="35dp"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:paddingLeft="2dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="35dp"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_fans"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="34万"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="35dp"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝"
                            android:paddingLeft="3dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="35dp"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_praise"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="46 万"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="35dp"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="获赞"
                            android:paddingLeft="3dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="35dp"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_private"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="25sp"
                        android:layout_width="45sp"
                        android:text="私信"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:background="@drawable/buttons"
                        android:layout_marginLeft="26dp"
                        android:layout_marginTop="8dp"/>
                    <Button
                        android:id="@+id/btn_attention"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="25sp"
                        android:layout_width="105sp"
                        android:text="关注"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:background="@drawable/buttons1"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="8dp"/>
                    <Button
                        android:id="@+id/btn_recommend"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="25sp"
                        android:layout_width="30sp"
                        android:text="推荐"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:background="@drawable/buttons1"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="8dp"/>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_top"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_height="15dp"
                android:layout_width="15dp"
                android:background="@drawable/b6u" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认证： 抖音知名歌手"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:textSize="10sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp">
            <ImageView
                android:layout_height="15dp"
                android:layout_width="15dp"
                android:background="@drawable/b6s" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位置： 重庆理工大学"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:textSize="10sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp">
            <ImageView
                android:layout_height="15dp"
                android:layout_width="15dp"
                android:background="@drawable/b6b" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简介： 6666666666"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:textSize="10sp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_secondLine"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/ll_center"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="#dcdbdb">
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll_secondLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <android.support.design.widget.TabLayout
                android:id="@+id/tl_tab1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                app:tabIndicatorHeight="1dp">
            </android.support.design.widget.TabLayout>
        </FrameLayout >

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_content1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
    </LinearLayout>
