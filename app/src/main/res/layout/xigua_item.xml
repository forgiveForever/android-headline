<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.jzvd.JzvdStd
        android:id="@+id/jz_video_xigua"
        android:layout_width="match_parent"
        android:layout_height="180dp" />
    <LinearLayout
        android:id="@+id/ll_intend"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
       >

        <ImageView
            android:id="@+id/iv_headimg_xigua"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pic_8" />

        <TextView
            android:id="@+id/tv_author_xigua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="NoHAHA"/>
        <View
            android:id="@+id/black_view"
            android:layout_width="0.5dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/tv_follow_xigua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/orange"
            android:text="关注"/>
        <Space
            android:id="@+id/commentSpace_xigua"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_comment_xigua"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/message"/>
        <TextView
            android:id="@+id/tv_comment_count_xigua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="408"/>

        <ImageView
            android:id="@+id/iv_more_xigua"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/more" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/gray"/>
    </LinearLayout>

