<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.androidgroup.MainActivity">

<!--西瓜视频搜索区-->
    <LinearLayout
        android:id="@+id/ll_search_xigua"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#d43d3d"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:paddingRight="6dp"
        >
        <LinearLayout
            android:id="@+id/ll_searchBox_xigua"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/circle"
            android:paddingLeft="13dp"
            android:paddingTop="5dp"
            android:paddingBottom="3dp"
            android:paddingRight="6dp"
            android:layout_marginRight="8dp"
            >

            <ImageView
                android:id="@+id/iv_search_xigua"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/axs" />

            <TextView
                android:id="@+id/top_search_xigua"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:padding="4dp"
                android:gravity="center"
                android:text="welcome to the world"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_release_xigua"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ac9"

            />
    </LinearLayout>

    <!--西瓜视频上部导航栏-->
    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout_xigua"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabSelectedTextColor="@color/orangeRed"
        app:tabTextColor="#000000"
        app:tabIndicatorHeight="0dp">
    </android.support.design.widget.TabLayout>
    <!--西瓜视频内容-->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_xigua"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

</LinearLayout>