<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.androidgroup.MainActivity">
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

</FrameLayout>
    <!--底部导航栏-->
    <LinearLayout
        android:id="@+id/ll_bottomBox"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#f2f2f2"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:id="@+id/rl_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_homePage"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/home"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主页"
                android:textSize="10sp"
                android:id="@+id/tv_home"/>

        </LinearLayout></RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_xigua"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_waterMelon"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_xigua"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/xigua" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="西瓜视频"
                android:id="@+id/tv_xigua"
                android:textSize="10sp"/>

        </LinearLayout></RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_release"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_smallNews"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_release"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/bap" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布"
                android:id="@+id/tv_release"
                android:textSize="10sp"/>

        </LinearLayout></RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_nearby"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_nearby"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_nearby"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/nearby"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附近"
                android:id="@+id/tv_nearby"
                android:textSize="10sp"/>

        </LinearLayout></RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_mine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_myZone"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_mine"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/mine"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的中心"
                android:id="@+id/tv_mine"
                android:textSize="10sp"/>

        </LinearLayout></RelativeLayout>
    </LinearLayout>
</LinearLayout>
